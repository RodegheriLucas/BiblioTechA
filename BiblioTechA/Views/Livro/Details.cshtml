@model BiblioTechA.Models.Livro

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes</h1>

<div>
    <h4>Livro</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Título
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            Gênero
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Biblioteca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Biblioteca.BiblioNome)
        </dd>
        
        <h3 class="mt-4">Acervo</h3>
        @if (ViewData["LivrosRelacionados"] != null)
        {
            var livrosRelacionados = ViewData["LivrosRelacionados"] as List<BiblioTechA.Models.Livro>;

            <ul>
                @foreach (var livro in livrosRelacionados)
                {
                    <a style="color: black; text-decoration: none" asp-action="Details" asp-route-id="@livro.Id"><p>@livro.Titulo</p></a>
                }
            </ul>
        }
        else
        {
            <p>Não há livros relacionados.</p>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-info">Editar</a> |
    <a asp-action="Index" class="btn btn-outline-warning">Voltar à lista</a>
</div>
