@model BiblioTechA.Models.Pedido

@{
    ViewData["Title"] = "Criar Pedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Criar Pedido</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Empresta">Data de Empréstimo</label>
                <input asp-for="Empresta" class="form-control" />
                <span asp-validation-for="Empresta" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Devolve">Data de Devolução</label>
                <input asp-for="Devolve" class="form-control" />
                <span asp-validation-for="Devolve" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="LeitorId">Leitor</label>
                <select asp-for="LeitorId" class="form-control" asp-items="ViewBag.LeitorId"></select>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br>
<div>
    <a asp-action="Index" class="btn btn-outline-warning">Voltar para a Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
