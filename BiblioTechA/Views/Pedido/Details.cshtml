@model BiblioTechA.Models.Pedido

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes</h1>

<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Data de Empréstimo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Empresta)
        </dd>
        <dt class="col-sm-2">
            Data de Devolução
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Devolve)
        </dd>
        <dt class="col-sm-2">
            Livro
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Livro.Titulo)
        </dd>
        <dt class="col-sm-2">
            Leitor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Leitor.Nome)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-info">Editar</a> |
    <a asp-action="Index" class="btn btn-outline-warning">Voltar à lista</a>
</div>
