@model BiblioTechA.Models.Pedido

@{
    ViewData["Title"] = "Excluir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Excluir Pedido</h1>

<h3>Tem certeza de que deseja excluir este item?</h3>
<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Data de Empréstimo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Empresta)
        </dd>
        <dt class="col-sm-2">
            Data de Devolução
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Devolve)
        </dd>
        <dt class="col-sm-2">
            Livro
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Livro.Titulo)
        </dd>
        <dt class="col-sm-2">
            Leitor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Leitor.Nome)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-outline-danger" /> |
        <a asp-action="Index" class="btn btn-outline-secondary">Voltar à lista</a>
    </form>
</div>
