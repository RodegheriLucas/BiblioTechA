@model BiblioTechA.Models.Pedido

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1>Editar Pedido</h1>
</div>
<br />
<h4>Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Empresta" class="control-label"></label>
                <input asp-for="Empresta" class="form-control" />
                <span asp-validation-for="Empresta" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Devolve" class="control-label"></label>
                <input asp-for="Devolve" class="form-control" />
                <span asp-validation-for="Devolve" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="LivroId" class="control-label">Livro</label>
                <select asp-for="LivroId" class="form-control" asp-items="ViewBag.Livros"></select>
                <span asp-validation-for="LivroId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="LeitorId" class="control-label">Leitor</label>
                <select asp-for="LeitorId" class="form-control" asp-items="ViewBag.Leitores"></select>
                <span asp-validation-for="LeitorId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-outline-warning">Voltar para a lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
